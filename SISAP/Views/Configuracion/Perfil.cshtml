        <!--Layout de 3 columnas-->

        <!--Layout de 9 columnas-->
        <div class="col-sm-12 col-md-9">
            <div class="row">
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header">
                            <h4>Editar Perfil</h4>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control" value="Nand">
